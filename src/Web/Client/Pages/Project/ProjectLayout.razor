@inherits LayoutComponentBase
@layout MainLayout

<CascadingValue Value="this">
    <MudDrawer ClipMode="DrawerClipMode.Always" Elevation="2" Open="true">
        <MudNavMenu>
            <MudNavLink Href="@GetPageRoute("tasks")">Tasks</MudNavLink>
            <MudNavLink Href="@GetPageRoute("members")">Members</MudNavLink>
            <MudNavLink Href="@GetPageRoute("workflow")">Workflow</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    @Body
</CascadingValue>


@code {
    public Guid ProjectId { get; set; }

    private string GetPageRoute(string page)
        => $"project/{ProjectId}/{page}";
}
