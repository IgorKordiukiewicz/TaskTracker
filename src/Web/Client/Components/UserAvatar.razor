<MudAvatar Color="Color.Primary" onclick="@(async () => await OnClick.InvokeAsync())" Style="@(Clickable ? "cursor: pointer;" : string.Empty)" Size="@Size">@Initials</MudAvatar>

@code {
    [Parameter]
    public required string Name { get; init; }

    [Parameter]
    public bool Clickable { get; set; } = false;

    [Parameter]
    public Size Size { get; set; } = Size.Medium;

    [Parameter]
    public EventCallback OnClick { get; set; }

    private string Initials => string.Concat(Name.Split(' ').Select(x => x[0]));
}
