@using Web.Client.Common;

<MudDialog @bind-IsVisible="Form.Visible" Style="width: 320px;" Options="@(new DialogOptions { NoHeader = true })">
    <DialogContent>
        <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2">@Title</MudText>
        @ChildContent
        <div class="d-flex mt-3 gap-2">
            <MudButton Variant="Variant.Outlined" OnClick="() => Form.Close()" FullWidth="true">Cancel</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" Disabled="@(!Form.IsValid())" OnClick="@ConfirmClicked" FullWidth="true">@ConfirmButtonText</MudButton>
        </div>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public required DialogForm Form { get; set; } // TODO: Rename 

    [Parameter]
    public required string Title { get; set; }

    [Parameter]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public string ConfirmButtonText { get; set; } = "Create";

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    private async Task ConfirmClicked()
    {
        await OnConfirm.InvokeAsync();
    }
}
