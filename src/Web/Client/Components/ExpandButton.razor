<MudIconButton Icon="@(Visible ? Icons.Material.Filled.ExpandLess : Icons.Material.Filled.ExpandMore)"
    OnClick="@ToggleVisibility" />

@code {
    [Parameter]
    public EventCallback VisibilityToggled { get; set; }

    public bool Visible { get; private set; } = false;

    public void Reset()
    {
        Visible = false;
    }

    private async Task ToggleVisibility()
    {
        Visible = !Visible;
        await VisibilityToggled.InvokeAsync();
    }
}
